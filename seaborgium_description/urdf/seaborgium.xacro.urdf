<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="seaborgium">

<xacro:property name="chassis_radius"   value="0.175" />
<xacro:property name="chassis_height"   value="0.08" />
<xacro:property name="wheel_separation" value="0.26" />
<xacro:property name="wheel_offset_z"   value="-0.005" />
<xacro:property name="wheel_radius"     value="0.04" />
<xacro:property name="wheel_width"      value="0.02" />
<xacro:property name="lidar_radius"     value="0.035" />
<xacro:property name="lidar_height"     value="0.03" />
<xacro:property name="lidar_offset_x"   value="0.075" />
<xacro:property name="sphere_radius"    value="0.01" />
<xacro:property name="ball_seperation"  value="0.29" />
<xacro:property name="base_offset_z"    value="0.045" />
<xacro:property name="rgbd_length"      value="0.02" />
<xacro:property name="rgbd_width"       value="0.08" />
<xacro:property name="rgbd_height"      value="0.016" />

  <!-- LINKS (GEOMETRY)-->
  <link name="base_footprint"/>

  <link name="base_link">
    <visual>
      <geometry>
         <cylinder length="${chassis_height}" radius="${chassis_radius}" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
          <cylinder length="${chassis_height}" radius="${chassis_radius}" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>

    <inertial>
      <mass value="4.2"/>
      <inertia ixx="0.034396" ixy="0.0" ixz="0.0" iyy="0.034396" iyz="0.0" izz="0.06431"/>
    </inertial>
  </link>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="blue">
        <color rgba="0.1 0.1 0.8 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>

    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.00004333" ixy="0.0" ixz="0.0" iyy="0.00004333" iyz="0.0" izz="0.00008"/>
    </inertial>
  </link>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="blue">
        <color rgba="0.1 0.1 0.8 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>

    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.00004333" ixy="0.0" ixz="0.0" iyy="0.00004333" iyz="0.0" izz="0.00008"/>
    </inertial>
  </link>

  <link name="front_wheel">
    <visual>
      <geometry>
        <sphere radius="${sphere_radius}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="blue">
        <color rgba="0.1 0.1 0.8 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <sphere radius="${sphere_radius}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>

    <inertial>
      <mass value="0.06"/>
      <inertia ixx="0.0000024" ixy="0.0" ixz="0.0" iyy="0.0000024" iyz="0.0" izz="0.0000024"/>
    </inertial>
  </link>

  <link name="rear_wheel">
    <visual>
      <geometry>
        <sphere radius="${sphere_radius}" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="blue">
        <color rgba="0.1 0.1 0.8 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <sphere radius="${sphere_radius}" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>

    <inertial>
      <mass value="0.06"/>
      <inertia ixx="0.0000024" ixy="0.0" ixz="0.0" iyy="0.0000024" iyz="0.0" izz="0.0000024"/>
    </inertial>
  </link>

  <link name="imu_link">
  <!-- Frame to attach an IMU to -->
  </link>

  <link name="depth">
    <visual>
      <geometry>
        <box size="${rgbd_length} ${rgbd_width} ${rgbd_height}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="green">
        <color rgba="0.1 1 0.1 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <box size="${rgbd_length} ${rgbd_width} ${rgbd_height}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>

    <inertial>
      <mass value="0.08"/>
      <inertia ixx="0.00004437" ixy="0.0" ixz="0.0" iyy="0.000004373" iyz="0.0" izz="0.00004533"/>
    </inertial>
  </link>

  <link name="laser">
    <visual>
      <geometry>
        <cylinder length="${lidar_height}" radius="${lidar_radius}" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <cylinder length="${lidar_height}" radius="${lidar_radius}" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>

    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.00007625" ixy="0.0" ixz="0.0" iyy="0.00007625" iyz="0.0" izz="0.0001225"/>
    </inertial>
  </link>


  <!-- JOINTS -->
  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 ${base_offset_z}" rpy="0 0 0"/>
  </joint>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 ${wheel_separation/2} ${wheel_offset_z}" rpy="-${pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
    <!--<limit effort="100.0" velocity="3.14159"/>-->
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -${wheel_separation/2} ${wheel_offset_z}" rpy="-${pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
    <!--<limit effort="100.0" velocity="3.14159"/>-->
  </joint>

  <joint name="front_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_wheel"/>
    <origin xyz="${ball_seperation/2} 0 ${-wheel_radius - wheel_offset_z}" rpy="0 0 0"/>
  </joint>

   <joint name="rear_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_wheel"/>
    <origin xyz="-${ball_seperation/2} 0 ${-wheel_radius - wheel_offset_z}" rpy="0 0 0"/>
  </joint>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <origin xyz="${lidar_offset_x} 0 ${chassis_height/2 + lidar_height/2}" rpy="0 0 0"/>
  </joint>

  <joint name="rgbd_joint" type="fixed">
    <parent link="base_link"/>
    <child link="depth"/>
    <origin xyz="${chassis_radius - rgbd_length/2} 0 0" rpy="0 0 0"/>
  </joint>


  <!-- GAZEBO PLUGINS -->
  <!-- Differential Drive - https://gazebosim.org/api/gazebo/4.5/classignition_1_1gazebo_1_1systems_1_1DiffDrive.html -->
  <gazebo>
    <plugin filename="ignition-gazebo-diff-drive-system" name="ignition::gazebo::systems::DiffDrive">
      <!-- Wheel Joints -->
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>

      <!-- Kinematics -->
      <wheel_separation>${wheel_separation}</wheel_separation>
      <wheel_radius>${wheel_radius}</wheel_radius>

      <odom_publish_frequency>50</odom_publish_frequency>

      <!-- TF Frames -->
      <frame_id>/odom_raw</frame_id>
      <child_frame_id>/base_footprint</child_frame_id>

      <!-- topics -->
      <!-- <topic>/model/seaborgium/cmd_vel</topic> THIS IS DEFAULT -->
      <!-- <odom_topic>/model/seaborgium/odom_raw</odom_topic> THIS IS DEFAULT-->
      <!-- <tf_topic>/model/seaborgium/tf</tf_topic> THIS IS DEFAULT -->
      <!-- <tf_topic></tf_topic> Leave blank if you plan to use a filter + imu (e.g. EKF) -->
    </plugin>
  </gazebo>

   <!-- Joint State Publisher -->
  <gazebo>
      <plugin filename="ignition-gazebo-joint-state-publisher-system" name="ignition::gazebo::systems::JointStatePublisher">
        <update_rate>50</update_rate>
        <joint_name>left_wheel_joint</joint_name>
        <joint_name>right_wheel_joint</joint_name>
      </plugin>
  </gazebo>

  <gazebo reference="front_wheel">
    <mu1 value="0.001"/>
    <mu2 value="0.001"/>
  </gazebo>

  <gazebo reference="rear_wheel">
    <mu1 value="0.001"/>
    <mu2 value="0.001"/>
  </gazebo>

  <gazebo reference="right_wheel">
    <mu1 value="1.0"/>
    <mu2 value="1.0"/>

  </gazebo>

  <gazebo reference="left_wheel">
    <mu1 value="1.0"/>
    <mu2 value="1.0"/>
  </gazebo>

   <!-- Lidar Sensor -->
  <gazebo reference="laser">
    <sensor type="gpu_lidar" name="generic_lidar_sensor">
      <topic>/model/seaborgium/scan</topic>
      <frame_id>laser</frame_id>
      <ignition_frame_id>laser</ignition_frame_id>

      <update_rate>10.0</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>1024</samples>
            <resolution>1</resolution>
            <min_angle>-${pi*0.75}</min_angle>
            <max_angle>${pi*0.75}</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.20</min>
          <max>20.0</max>
          <resolution>0.03</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.001</stddev>
        </noise>
      </ray>
      <always_on>1</always_on>
      <visualize>false</visualize>
    </sensor>
  </gazebo>

  <gazebo>
    <plugin filename="libignition-gazebo-sensors-system.so" name="ignition::gazebo::systems::Sensors">
        <render_engine>ogre2</render_engine>
    </plugin>
  </gazebo>

   <!-- IMU Sensor -->
  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
      <topic>/model/seaborgium/imu_raw</topic>
      <frame_id>imu_link</frame_id>
      <ignition_frame_id>imu_link</ignition_frame_id>
      <plugin filename="libignition-gazebo-imu-system.so" name="ignition::gazebo::systems::Imu">
        <initial_orientation_as_reference>false</initial_orientation_as_reference>
      </plugin>
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
     <imu>
     	<angular_velocity>
     	  <x>
     	    <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </z>
        </angular_velocity>
        <linear_acceleration>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </z>
        </linear_acceleration>
      </imu>
    </sensor>
  </gazebo>

  <!-- Depth Camera -->
  <gazebo reference="depth">
    <sensor type="depth" name="depth_camera">
      <topic>/model/seaborgium/depth</topic>
      <frame_id>depth</frame_id>
      <ignition_frame_id>depth</ignition_frame_id>

      <update_rate>60.0</update_rate>
      <always_on>true</always_on>

      <camera name="camera">
        <horizontal_fov>1.51844</horizontal_fov>
        <vertical_fov>1.01229</vertical_fov>
        <image>
          <width>1280</width>
          <height>720</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.3</near>
          <far>4.0</far>
        </clip>
      </camera>
    </sensor>
  </gazebo>

</robot>